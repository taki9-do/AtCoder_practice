#include <bits/stdc++.h>
#define rep(i,n) for (int i = 0; i < (n); ++i)
using namespace std;
using ll = long long;
using Graph = vector<vector<int>>;
vector<bool> seen,finished,hist;//histは訪問履歴
bool roop=false;


int main(void){
    // Your code here!
    int N,K;cin>>N>>K;
    vector<int> p(N);
    rep(i,N) cin>>p[i];
    sort(p.begin(),p.end());
    
    int ans=0;
    rep(i,K) ans+=p[i];
    cout<<ans;
    
}

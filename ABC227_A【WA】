#include <bits/stdc++.h>
using namespace std;
#define rep(i,n) for (int i = 0; i < (n); ++i)
using ll = long long;
int main(void){
    // Your code here!
    int N,K,A;
    cin>>N>>K>>A;
    
    int a=A-1;
    
    for(int i=0;i<K;i++){
        a++;
        if(a>N) a=1;
        //cout<<a<<endl;
    }
    
    cout<<a<<endl;
    
}

#include <iostream>
#include<math.h>
#include<vector>
#include <algorithm>
#include <map>  
using namespace std;
#define ll long long

int main(void){
    // Your code here!
   ll N,money=0;
   cin>>N;
   
   for(int i=1;i<=N;i++){
       money+=i;
       if(money>=N){
           cout<<i<<endl;
           return 0;
       } 
   }

   
   
   
}

#include <bits/stdc++.h>
using namespace std;
#define rep(i,n) for (int i = 0; i < (n); ++i)
using ll = long long;
int main(void){
    // Your code here!
    ll N;
    cin>>N;
    ll temp=N,ans=0;
    vector<ll> A;
    ll x=1000;
    
    while(temp>=x){
        ans+=temp-x+1;
        x*=1000;
    }
    
    cout<<ans;
    
    
}
